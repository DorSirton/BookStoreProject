<UserControl x:Class="BookStore.Client.Views.CostumerOptionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
        DataContext="{Binding Source={StaticResource Locator}, Path= CostumerOptionPage}">

    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Background="Gray" Grid.Row="0" VerticalAlignment="Center" Content="Buy New Prodact" FontStyle="Oblique" Command="{Binding BuyProdact}" Height="50" Width="200"/>
        <Button Background="Gray" Grid.Row="1" VerticalAlignment="Center" Content="See Prodacts" FontStyle="Oblique" Command="{Binding SeeProdacts }" Height="50" Width="200"/>
        <Button Background="Gray" Grid.Row="2" VerticalAlignment="Center" Content="Exit" FontStyle="Oblique" Command="{Binding Exit}"  Height="50" Width="200"/>
    </Grid>
</UserControl>
